{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "paths": {
        "@controllers/*": ["controllers/*"],
        "@models/*": ["models/*"],
        "@routes/*": ["routes/*"],
        "@config/*": ["config/*"]
      }
    },
    "include": [
      "controllers/**/*",
      "models/**/*", 
      "routes/**/*",
      "config/**/*"
    ],
    "exclude": [
      "node_modules",
      "logs",
      "public",
      "tmp"
    ]
   }